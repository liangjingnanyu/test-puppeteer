{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "windsurf": {
    "version": "1.0.0",
    "configVersion": "1.0.0"
  },
  "name": "test-puppeteer",
  "version": "0.0.0",
  "description": "Puppeteer 浏览器自动化测试项目",
  "memories": ["渐进", "base", "project-structure", "react-patterns", "antd-patterns", "api-patterns", "puppeteer-patterns"],
  "rules": ["base", "typescript", "component", "tech-stack", "puppeteer", "api"],
  "excludes": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/.git/**",
    "**/coverage/**",
    "**/uploads/**",
    "**/*.log",
    "**/.DS_Store",
    "**/.idea",
    "**/.vscode",
    "**/__pycache__",
    "**/*.min.js",
    "**/*.min.css",
    "**/pnpm-lock.yaml",
    "**/.husky/_/**"
  ],
  "includes": [
    "src/**/*.{ts,tsx,js,jsx,json,css,less,scss}",
    "public/**/*.{html,js,css,json,ico,png,jpg,jpeg,svg}",
    "*.{json,md,js,ts,cjs}",
    ".windsurf/**/*",
    "server.js"
  ],
  "variables": {
    "projectName": "test-puppeteer",
    "author": "liangjing",
    "framework": "React 19.1.1",
    "buildTool": "Vite 7.1.2",
    "typescript": "5.8.3",
    "antd": "5.27.3",
    "tailwindcss": "4.1.13",
    "puppeteer": "24.20.0"
  },
  "commands": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server": "node server.js",
    "start": "concurrently \"pnpm run server\" \"pnpm run dev\""
  },
  "environment": {
    "NODE_ENV": "development",
    "PORT": 5173,
    "API_PORT": 3001,
    "API_ENV": "development",
    "BROWSER": "none"
  }
}
